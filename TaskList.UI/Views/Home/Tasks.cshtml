@model IEnumerable<TaskItem>
@{
    ViewData["Title"] = "Tasks";
}

<h1>Tasks</h1>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-responsive table-bordered">
            <thead>
                <tr>
                    <td>Task Name</td>
                    <td>Is Task Completed?</td>
                    <td>Task Created</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.TaskName</td>
                            <td>@task.IsCompleted</td>
                            <td>@task.DateCreated.ToShortDateString()</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">
                            No Records Found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
